{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@bananasplit-js": ["providers/core"],
      "@bananasplit-js/*": ["providers/core/*"],
      "@services": ["providers/services"],
      "@providers/*": ["providers/*"],
      "@database/*": ["database/*"],
      "@graphql/*": ["graphql/*"],
      "@schemas/*": ["graphql/schemas/*"],
      "@resolvers/*": ["graphql/resolvers/*"],
      "@settings/*": ["settings/*"],
      "@middlewares/*": ["middlewares/*"],
      "@controllers/*": ["app/controllers/*"],
      "@models/*": ["app/models/*"],
      "@routes/*": ["app/routes/*"],
      "@helpers/*": ["app/helpers/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./jest.config.js"]
}
